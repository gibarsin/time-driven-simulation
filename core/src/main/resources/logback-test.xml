<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="defaultPattern" value="%-4relative %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n" />

    <appender name="root-appender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${defaultPattern:-}</pattern>
        </encoder>
    </appender>


    <appender name="cushioned-oscilator-appender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${defaultPattern:-}</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="root-appender" />
    </root>

    <logger name="ar.edu.itba.ss.cushioned_oscilator" level="DEBUG" additivity="false">
        <appender-ref ref="cushioned-oscilator-appender" />
    </logger>

</configuration>
